    {#<div id="search-popup">#}
        {#<form>#}
            {#<i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>#}
            {#<input type="text" class="input-search" placeholder="Введите ключевые слова поиска..."/>#}
        {#</form>#}
        {#<div class="search-popup-result">#}
            {#<p class="popup-no-search-result">No results found</p>#}
