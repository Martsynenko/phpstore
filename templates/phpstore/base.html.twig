<!DOCTYPE html>
<html lang="ru">

<head>

    <meta charset="utf-8">

    <title>{% block title %} PhpStore - Статьи по PHP {% endblock %}</title>
    <meta name="description" content="{% block description %}{% endblock %}">
    <meta name="keywords" content="{% block keywords %}{% endblock %}"/>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('img/favicon.ico') }}"/>

    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/fontawesome-all.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/loading.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/loading-btn.css') }}"/>

    <link rel="stylesheet" href="{{ asset('css/main.style.css') }}"/>
    <link rel="stylesheet" href="{{ asset('css/media.css') }}"/>

    {% block styles %}{% endblock %}

</head>

<body>

<div id="wrapp">
    <header>
        <div class="container">
            <div class="row header-row">
                <div class="col-md-12">
                    <div class="logo">
                        <a href="/"><h2>PhpStore</h2></a>
                    </div>
                    {#<div class="btn-search">#}
                        {#<a href="#search-popup" class="btn-search-popup"><i class="fa fa-search" aria-hidden="true"></i></a>#}
                    {#</div>#}
                </div>
            </div>
        </div>
    </header>

    {% block content %}
    <main>
        {% block top_breadcrumb %}
            <div class="container mobile-device-hidden">
                <div class="row">
                    <div class="col-md-12">
                        <div class="top-bread-crumb">
                            <div class="top-pagination-bread-crumb">
                                {#{% for item in breadcrumbs %}#}
                                    {#<span>{{ item }}</span>#}
                                {#{% endfor %}#}
                                {#<span>Главная</span><i class="fas fa-chevron-right"></i><span>Публикации</span>#}
                            </div>
                            {% if not countArticles is empty %}
                            <div class="total-articles-bread-crumb">
                                <p>Всего <span>{{ countArticles.count }}</span> {{ countArticles.title }}</p>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}

        <section>
            <div class="container">
                <div class="row">
                    <div class="home-content-articles">
                        {% for article in articles %}
                        <div class="home-article-item col-md-9">
                            <a href="{{ path('article', {'articleUrl':article.url}) }}"><h2>{{ article.title }}</h2></a>
                            <div class="home-article-item-bread-crumb">
                                <i class="fas fa-eye"></i><span>{{ article.visits }}</span>
                                <i class="far fa-clock"></i><span>{{ article.date }}</span>
                            </div>
                            <p>{{ article.text|raw }} <a href="{{ path('article', {'articleUrl':article.url}) }}">подробнее</a></p>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </section>

        {% if pagination.show != false %}
        <div class="container">
            <div class="pagination">
                {% for item in pagination.pages %}
                <a href="{{ path(pagination.routeName, {'page': item.url}) }}" {% if item.active == true %}class="btn-active-pagination"{% endif %}>{{ item.page }}</a>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        {#<div class="container">#}
            {#<div class="row">#}
                {#<div class="col-md-12">#}
                    {#<div class="position-elements-bread-crumb">#}
                        {#<div class="btn-position-elements-bread-crumb">#}
                            {#<i class="fa fa-th-large fa-th-large-home-articles" aria-hidden="true"></i>#}
                            {#<i class="fa fa-align-justify fa-align-justify-home-articles" aria-hidden="true"></i>#}
                        {#</div>#}
                    {#</div>#}
                {#</div>#}
            {#</div>#}
        {#</div>#}

    </main>
    {% endblock %}
</div>

<footer>
    <p> &copy; PhpStore 2018 All Rights Reserved</p>
</footer>


